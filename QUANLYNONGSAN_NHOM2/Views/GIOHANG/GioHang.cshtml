@model IEnumerable <QUANLYNONGSAN_NHOM2.Models.GIOHANG>

@{
    ViewBag.Title = "GioHang";
}

<style>
    .bold-td
    {
        font-weight:bold;
    }
</style>

<h2>Giỏ Hàng</h2>
<br />
<table style="border: 2px solid black; margin:10px" class="table">
    <tr class="bold-td" style="background-color: lightgreen">
            <td>MÃ NÔNG SẢN</td>
            <td>TÊN NÔNG SẢN</td>
            <td>ĐƠN VỊ TÍNH</td>
            <td>GIÁ</td>
            <td>SỐ LƯỢNG</td>
            <td></td>
            <td></td>
            <td></td>
    </tr>
    <br />
    @foreach (var item in Model)
    {
    <tr>

        <td>@item.NONG.MANS</td>
        <td>@item.NONG.TENNS</td>
        <td>@item.NONG.DONVITINH</td>
        <td>@item.NONG.GIA</td>
        <td>@item.SoLuong</td>
        <td><img src="~/Image_NONGSAN/@item.NONG.ANH" width="100px" height="100px" alt="Alternate Text" /></td>
        <td><a href="@Url.Action("Deatail_NS","NONGSAN",new { @id = item.NONG.MANS})">Detail</a></td>
        <td><a href="@Url.Action("Delete","GIOHANG",new { @id = item.NONG.MANS})">Delete</a></td>
    </tr>
    }
    <tr style="background-color: lightgreen">
        <td colspan="4" style="color:red;font-weight:bold">Số lượng:</td>
        <td style="color:blue;font-weight:bold">@ViewBag.TongSoLuong</td>
        <td style="color:red;font-weight:bold">Thành Tiền:</td>
        <td style="color:blue;font-weight:bold">@ViewBag.TongThanhTien</td>
        <td></td>
    </tr>
</table>



